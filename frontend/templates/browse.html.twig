{% extends 'base.html.twig' %}

{% block title %}Browse Music - TalkTempo{% endblock %}

{% block content %}
    <div class="min-h-screen bg-white">
        <div class="container mx-auto px-1 pb-2 relative z-3">
            <div class="flex flex-col items-center text-center max-w-3xl mx-auto">
                <div class="transform transition-all duration-700 translate-y-8 opacity-0 animate-slide-up space-y-4">
                    <h1 class="text-6xl font-bold leading-tight text-gray-900 hover:text-indigo-600 transition-colors duration-300">
                        BROWSE
                    </h1>
                </div>
                
                <div class="mt-8 transform transition-all duration-700 delay-300 translate-y-8 opacity-0 animate-slide-up">
                    <h3 class="text-4xl font-bold mb-8 text-gray-800 hover:text-gray-600 transition-colors duration-300">
                        Discover new music, share your thoughts,<br>
                        and connect with other music lovers
                    </h3>
                    <div class="flex justify-center gap-4 mt-12">
                        <input type="text" 
                               placeholder="Search for albums, artists, or genres..." 
                               class="w-full max-w-xl px-6 py-3 rounded-full bg-gray-100 text-gray-900 border border-gray-300 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/50"
                        >
                    </div>
                </div>
            </div>
        </div>

        <!-- Featured Albums Section -->
        <div class="container mx-auto px-4 mt-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured Albums</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                {% for album in albums|default([]) %}
                    <div class="bg-gray-50 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
                        <div class="aspect-square overflow-hidden">
                            <a href="{{ album.link }}" target="_blank" rel="noopener noreferrer">
                                <img src="/assets/images/{{ album.image }}" alt="{{ album.title }}" class="w-full h-full object-cover hover:opacity-80 transition-opacity">
                            </a>
                        </div>
                        <div class="p-4">
                            <p class="text-sm text-indigo-600">{{ album.genre }}</p>
                            <h3 class="text-gray-900 font-semibold mt-1">{{ album.title }}</h3>
                            <p class="text-gray-600 text-sm mt-1">{{ album.release }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}



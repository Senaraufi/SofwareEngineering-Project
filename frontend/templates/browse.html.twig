{% extends 'base.html.twig' %}

{% block title %}Browse Music - TalkTempo{% endblock %}

{% block content %}
    <div class="min-h-screen bg-white">
        <div class="container mx-auto px-1 pb-2 relative z-3">
            <div class="flex flex-col items-center text-center max-w-3xl mx-auto">
                <div class="transform transition-all duration-700 translate-y-8 opacity-0 animate-slide-up space-y-4">
                    <h1 class="text-6xl font-bold leading-tight text-gray-900 hover:text-indigo-600 transition-colors duration-300" style = "padding-top: 50px">
                        BROWSE
                    </h1>
                </div>
                
                <div class="mt-8 transform transition-all duration-700 delay-300 translate-y-8 opacity-0 animate-slide-up">
                    <h3 class="text-4xl font-bold mb-8 text-gray-800 hover:text-gray-600 transition-colors duration-300">
                        Discover new music, share your thoughts,<br>
                        and connect with other music lovers
                    </h3>
                    <div class="flex justify-center gap-4 mt-12">
                        <input type="text" 
                               placeholder="Search for albums, artists, or genres..." 
                               class="w-full max-w-xl px-6 py-3 rounded-full bg-gray-100 text-gray-900 border border-gray-300 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/50"
                        >
                    </div>
                </div>
            </div>
        </div>

       

        <!-- Contact Section -->
        <div class="bg-gray-100 py-32 mt-32 mb-16 border-t border-gray-200" style = "padding-bottom: 100px; padding-top: 100px">
            <div class="container mx-auto px-4 max-w-3xl text-center">
                <h2 class="text-4xl font-bold mb-8 text-gray-900">Contact us for more Info</h2>
                <p class="text-gray-600 mb-10 max-w-2xl mx-auto text-base leading-relaxed">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque tristique convallis massa at amet tortor. Maecenas in imperdiet orci. Phasellus non porttitor erat.
                </p>
                <div class="flex justify-center mt-8">
                    <a href="#" class="inline-block bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-700 transition-colors duration-300 font-medium shadow-md">
                        Contact
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



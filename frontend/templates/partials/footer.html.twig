<!-- Music Player -->
<div class="music-player-container" id="musicPlayer" style="background-color: #1A1B26 !important;">
    <!-- Progress Bar -->
    <div class="track-progress" style="width: 100%; height: 3px; background: rgba(255,255,255,0.1); cursor: pointer;">
        <div class="track-progress-bar" style="width: 0%; height: 100%; background: #1DB954;"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6">
        <!-- Player Content -->
        <div class="flex items-center justify-between py-4" style="min-height: 80px;">
            <!-- Track Info -->
            <div class="flex items-center space-x-4" style="min-width: 200px;">
                <div class="flex-shrink-0" style="width: 56px; height: 56px; border-radius: 4px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                    <img src="/images/Soad.jpeg" alt="Album Art" class="player-album-art" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <div class="flex flex-col">
                    <div class="track-title" style="color: white; font-size: 14px; font-weight: 500; margin-bottom: 4px;">Sugar</div>
                    <div class="track-artist" style="color: rgba(255,255,255,0.7); font-size: 12px;">System Of A Down</div>
                </div>
            </div>

            <!-- Player Controls -->
            <div class="flex items-center justify-center space-x-8" style="flex: 1; max-width: 300px;">
                <!-- Previous Button -->
                <button class="prev-button" style="padding: 8px;">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="white">
                        <path d="M19 6L9 12L19 18V6Z"></path>
                        <rect x="5" y="6" width="2" height="12"></rect>
                    </svg>
                </button>

                <!-- Play Button -->
                <button class="play-button" style="padding: 12px; background: rgba(255,255,255,0.1); border-radius: 50%;">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="white">
                        <path d="M8 5V19L19 12L8 5Z"></path>
                    </svg>
                </button>

                <!-- Next Button -->
                <button class="next-button" style="padding: 8px;">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="white">
                        <path d="M5 18L15 12L5 6V18Z"></path>
                        <rect x="17" y="6" width="2" height="12"></rect>
                    </svg>
                </button>
            </div>

            <!-- Volume Section -->
            <div class="flex items-center space-x-2" style="min-width: 200px; justify-content: flex-end;">
                <div class="volume-slider" style="width: 100px; height: 4px; background: rgba(255,255,255,0.1); border-radius: 2px; cursor: pointer;">
                    <div style="width: 70%; height: 100%; background: rgba(255,255,255,0.7); border-radius: 2px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>


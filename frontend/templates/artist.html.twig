{% extends 'base.html.twig' %}

{% block title %}{{ artist.getName() }} - TalkTempo{% endblock %}

{% block content %}
    <div class="min-h-screen bg-white">
        <div class="container mx-auto px-4 py-16">
            <!-- Artist Header -->
            <div class="flex flex-col md:flex-row items-center md:items-start gap-8 mb-12">
                <div class="w-48 h-48 rounded-full overflow-hidden shadow-lg">
                    <img src="{{ artist.getImageUrl() }}" alt="{{ artist.getName() }}" class="w-full h-full object-cover">
                </div>
                <div class="flex-1">
                    <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ artist.getName() }}</h1>
                    {% if artist.getGenres() %}
                        <div class="flex flex-wrap gap-2 mb-4">
                            {% for genre in artist.getGenres() %}
                                <span class="px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm">
                                    {{ genre }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <p class="text-gray-600 text-lg mb-6">{{ artist.getDescription() }}</p>
                    
                    <!-- Comments Link -->
                    <div class="mt-4">
                        <a href="/artist/{{ artist.getId() }}/comments" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                            </svg>
                            View Comments & Reviews
                        </a>
                    </div>
                </div>
            </div>

            <!-- Albums Section -->
            <div class="mt-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Albums</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {% for album in albums %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105">
                            <a href="/album/{{ album.getId() }}">
                                <img src="{{ album.image_url }}" alt="{{ album.title }}" class="w-full h-48 object-cover">
                                <div class="p-4">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ album.title }}</h3>
                                    <p class="text-gray-600 text-sm">{{ album.release_date|date('Y') }}</p>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

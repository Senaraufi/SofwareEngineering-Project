{% extends 'base.html.twig' %}

{% block title %}Ticket Confirmation - TalkTempo{% endblock %}

{% block content %}
<div class="bg-gray-100 min-h-screen py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Confirmation Card -->
        <div class="bg-white rounded-lg overflow-hidden shadow-xl">
            <!-- Header -->
            <div class="bg-indigo-600 py-6 px-6 text-white">
                <h1 class="text-2xl font-bold">Ticket Purchase Confirmation</h1>
                <p class="text-indigo-100">Thank you for your purchase!</p>
            </div>
            
            <!-- Order Details -->
            <div class="p-6 border-b border-gray-200">
                <div class="flex justify-between items-center mb-4">
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900">Order #{{ order_id }}</h2>
                        <p class="text-sm text-gray-600">Purchased on {{ purchase_date|date('F j, Y') }}</p>
                    </div>
                    <div class="text-right">
                        <a href="/concerts" class="text-indigo-600 hover:text-indigo-800 font-medium">Back to Concerts</a>
                    </div>
                </div>
            </div>
            
            <!-- Concert Details -->
            <div class="p-6 flex flex-col md:flex-row gap-6">
                <!-- Concert Image -->
                <div class="w-full md:w-1/3">
                    <img src="{{ concert.image }}" alt="{{ concert.artist }} Concert" class="w-full h-auto rounded-lg shadow-md">
                </div>
                
                <!-- Concert Info -->
                <div class="w-full md:w-2/3">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">{{ concert.artist }}</h3>
                    <div class="space-y-2 text-gray-700 mb-4">
                        <p class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="text-sm">{{ concert.venue }}</span>
                        </p>
                        <p class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span class="text-sm">{{ concert.date|date('F j, Y') }} at {{ concert.time }}</span>
                        </p>
                    </div>
                    
                    <!-- Ticket Details -->
                    <div class="bg-gray-50 p-4 rounded-lg mb-4">
                        <h4 class="font-semibold text-gray-900 mb-2">Ticket Details</h4>
                        <div class="flex justify-between border-b border-gray-200 py-2">
                            <span>General Admission</span>
                            <span>1 Ã— ${{ concert.price|number_format(2) }}</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-200 py-2">
                            <span>Service Fee</span>
                            <span>${{ (concert.price * 0.10)|number_format(2) }}</span>
                        </div>
                        <div class="flex justify-between font-bold text-gray-900 py-2">
                            <span>Total</span>
                            <span>${{ (concert.price * 1.10)|number_format(2) }}</span>
                        </div>
                    </div>
                    
                    <!-- QR Code -->
                    <div class="bg-gray-50 p-4 rounded-lg text-center">
                        <h4 class="font-semibold text-gray-900 mb-2">Your Ticket QR Code</h4>
                        <div class="inline-block bg-white p-2 rounded-lg shadow">
                            <!-- Placeholder for QR code -->
                            <div class="w-32 h-32 mx-auto bg-gray-800 flex items-center justify-center">
                                <span class="text-white text-xs">QR Code Placeholder</span>
                            </div>
                        </div>
                        <p class="text-sm text-gray-600 mt-2">Show this QR code at the venue entrance</p>
                    </div>
                </div>
            </div>
            
            <!-- Footer -->
            <div class="bg-gray-50 p-6 border-t border-gray-200">
                <p class="text-sm text-gray-600 mb-1">A confirmation email has been sent to your registered email address.</p>
                <p class="text-sm text-gray-600">If you have any questions, please contact <a href="mailto:support@talktempo.com" class="text-indigo-600 hover:text-indigo-800">support@talktempo.com</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

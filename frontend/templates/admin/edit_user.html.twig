{% extends 'base.html.twig' %}

{% block title %}Admin - Edit User{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Edit User</h1>
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form method="POST" action="/admin/users/edit/{{ user.user_id }}">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                    Username
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                       id="username" 
                       type="text" 
                       name="username" 
                       value="{{ user.username }}" 
                       required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                       id="email" 
                       type="email" 
                       name="email" 
                       value="{{ user.email }}" 
                       required>
            </div>
            <div class="mb-6">
                <label class="flex items-center">
                    <input type="checkbox" 
                           name="is_admin" 
                           class="form-checkbox h-5 w-5 text-indigo-600" 
                           {% if user.is_admin %}checked{% endif %}>
                    <span class="ml-2 text-gray-700">Administrator</span>
                </label>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" 
                        type="submit">
                    Save Changes
                </button>
                <a class="inline-block align-baseline font-bold text-sm text-indigo-500 hover:text-indigo-800" 
                   href="/admin/users">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

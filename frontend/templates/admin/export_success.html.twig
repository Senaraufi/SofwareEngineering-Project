{% extends 'base.html.twig' %}

{% block title %}User Export Success - TalkTempo{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">User Export Successful</h2>
        </div>
        <div class="card-body">
            <p class="lead">{{ message }}</p>
            
            <div class="alert alert-info">
                <h4 class="alert-heading">Exported {{ count }} user accounts</h4>
                <p>The SQL file with user data has been created in the database/user_exports directory.</p>
                <p>Additionally, the schema.sql file has been updated with the current user accounts.</p>
            </div>
            
            <h3>User Accounts</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.user_id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.is_admin == 1 %}
                                <span class="badge bg-danger">Admin</span>
                                {% else %}
                                <span class="badge bg-secondary">User</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-4">
                <a href="/admin/users" class="btn btn-primary">Back to User Management</a>
                <a href="/admin" class="btn btn-secondary">Admin Dashboard</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

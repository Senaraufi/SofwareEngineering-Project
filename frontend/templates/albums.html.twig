{% extends 'base.html.twig' %}

{% block title %}Albums - TalkTempo{% endblock %}

{% block content %}

     <!-- All Albums Section -->
        <div class="container mx-auto px-4 mt-16 pb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Browse Albums</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8">
                {% for album in albums|default([]) %}
                    <div class="bg-white rounded-lg overflow-hidden shadow-md transition-transform hover:scale-105">
                        <div class="aspect-square overflow-hidden">
                            <a href="{{ album.link }}" target="_blank" rel="noopener noreferrer">
                                <img src="/assets/images/{{ album.image }}" alt="{{ album.title }}" class="w-full h-full object-contain hover:opacity-80 transition-opacity">
                            </a>
                        </div>
                        <div class="p-4">
                            <div class="uppercase tracking-wide text-xs text-indigo-500 font-semibold">{{ album.genre }}</div>
                            <div class="text-gray-500 text-xs mb-2">{{ album.release }}</div>
                            <h3 class="text-base font-semibold mb-3 hover:text-indigo-600 transition-colors">{{ album.title }}</h3>
                            <div class="flex gap-2">
                                <button class="bg-gray-700 text-white px-3 py-1.5 rounded text-sm hover:bg-indigo-600 transition-colors duration-300 transform hover:scale-105">Comment</button>
                                <button class="border border-gray-300 text-gray-700 px-3 py-1.5 rounded text-sm hover:bg-gray-50 transition-colors duration-300 transform hover:scale-105">Reviews</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Welcome to TalkTempo{% endblock %}

{% block content %}
    <!-- Welcome Section with Music Theme -->
    <div class="relative min-h-screen flex items-center justify-center bg-cover bg-center transition-all duration-700 ease-in-out" style="background-image: url('/assets/images/concert1.jpg');">
        <div class="absolute inset-0 bg-black bg-opacity-60 transition-opacity duration-700"></div>
        <div class="absolute inset-0 flex items-center justify-center opacity-30"></div>
        <div class="container mx-auto px-1 pb-2 relative z-3">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center max-w-6xl mx-auto">
                <div class="transform transition-all duration-700 translate-y-8 opacity-0 animate-slide-up">
                    <h1 class="text-6xl font-bold leading-tight text-white hover:text-indigo-400 transition-colors duration-300">
                        WELCOME<br>
                        TO<br>
                        TALKTEMPO
                    </h1>
                </div>
                <div class="transform transition-all duration-700 delay-300 translate-y-8 opacity-0 animate-slide-up">
                    <p class="text-lg mb-8 text-white hover:text-gray-300 transition-colors duration-300">Whether you're a casual listener or a music snob, let TalkTempo be your music bestie!!! Just sign up and start sharing your thoughts on music with the world.</p>
                    {% if not is_logged_in|default(false) %}
                        <div class="flex gap-4">
                            <a href="/signup" class="inline-block px-8 py-3 rounded-full bg-white text-black hover:bg-indigo-500 hover:text-white transition-all duration-300 transform hover:scale-105 font-semibold">SIGN UP</a>
                            <a href="/login" class="inline-block px-8 py-3 rounded-full border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105 font-semibold">LOG IN</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <h1 class="text-3xl font-bold text-center mb-8 transform transition-all duration-500 hover:scale-105">Top Albums of The Week</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <!-- Album Cards -->
            {% set albums = [
                { 'image': 'pixies-album.jpg', 'genre': 'ALTERNATIVE ROCK', 'release': 'Released September 23, 1991', 'title': 'Pixies - Trompe Le Monde' },
                { 'image': 'system-album.jpg', 'genre': 'METAL', 'release': 'Released September 4, 2001', 'title': 'System of a Down - Toxicity' },
                { 'image': 'BTS-album.jpg', 'genre': 'K-POP', 'release': 'Released August 24, 2018', 'title': "BTS - Love Yourself Áµê 'Answer'" }
            ] %}

            {% for album in albums %}
                <div class="bg-white rounded-lg overflow-hidden shadow-md transition-all duration-500 hover:shadow-xl transform hover:-translate-y-2 opacity-0 animate-fade-in" style="animation-delay: {{ loop.index * 200 }}ms">
                    <div class="aspect-square overflow-hidden group">
                        <img src="/assets/images/{{ album.image }}" alt="{{ album.title }}" 
                             class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-110">
                    </div>
                    <div class="p-4 transform transition-all duration-300">
                        <div class="uppercase tracking-wide text-xs text-indigo-500 font-semibold hover:text-indigo-600 transition-colors">{{ album.genre }}</div>
                        <div class="text-gray-500 text-xs mb-2">{{ album.release }}</div>
                        <h3 class="text-base font-semibold mb-3 hover:text-indigo-600 transition-colors">{{ album.title }}</h3>
                        <div class="flex gap-2">
                            <button class="bg-gray-700 text-white px-3 py-1.5 rounded text-sm hover:bg-indigo-600 transition-colors duration-300 transform hover:scale-105">Comment</button>
                            <button class="border border-gray-300 text-gray-700 px-3 py-1.5 rounded text-sm hover:bg-gray-50 transition-colors duration-300 transform hover:scale-105">Reviews</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        @keyframes slideUp {
            from {
                transform: translateY(2rem);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(1rem);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-slide-up {
            animation: slideUp 0.7s ease-out forwards;
        }

        .animate-fade-in {
            animation: fadeIn 0.7s ease-out forwards;
        }
    </style> 
{% endblock %}
